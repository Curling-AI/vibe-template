# Dockerfile para desenvolvimento da API
FROM node:22-alpine

WORKDIR /app

# Instalar dependências do sistema
RUN apk add --no-cache git

# Copiar arquivos de dependências
COPY package*.json ./

# Instalar dependências
RUN npm ci

# Copiar código fonte
COPY . .

# Expor porta da API
EXPOSE 3001

# Comando para desenvolvimento com nodemon
CMD ["npm", "run", "dev:api"]
