{
  "name": "vibe-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "npm run start:full",
    "dev": "npm run dev:full",
    "dev:frontend": "vite",
    "dev:api": "nodemon",
    "dev:full": "concurrently \"npm run dev:frontend\" \"npm run dev:api\" --names \"FRONTEND,API\" --prefix-colors \"cyan,magenta\"",
    "build": "tsc -b && tsc-alias -p tsconfig.api.json && vite build",
    "start:api": "node dist/api/index.js",
    "start:frontend": "vite preview",
    "start:full": "concurrently \"npm run start:frontend\" \"npm run start:api\" --names \"FRONTEND,API\" --prefix-colors \"cyan,magenta\"",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky || true",
    "test": "vitest run",
    "docker:dev": "docker compose -f docker/compose/docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker/compose/docker-compose.dev.yml down",
    "docker:prod": "docker compose -f docker/compose/docker-compose.prod.yml --env-file .env up --build -d",
    "docker:prod:ssl": "docker compose -f docker/compose/docker-compose.prod.yml -f docker/compose/docker-compose.ssl.yml --env-file .env up --build -d",
    "docker:prod:down": "docker compose -f docker/compose/docker-compose.prod.yml --env-file .env down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker system prune -a",
    "env:init": "cp .env.default .env",
    "env:local": "docker/scripts/setup-envs.sh local",
    "env:staging": "docker/scripts/setup-envs.sh staging",
    "env:production": "docker/scripts/setup-envs.sh production"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{ts,tsx}": "eslint --fix"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.58.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "lucide-react": "^0.544.0",
    "morgan": "^1.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.6.2",
    "react-router-dom": "^7.9.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.18",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "npm:rolldown-vite@^7.1.14",
    "vitest": "^3.2.4"
  }
}
